<?xml version="1.0" ?>

<!-- *************************************************** -->
<!-- * A fully commented XML is diffusion_1.xml. Refer * -->
<!-- * to it to have full information about what       * -->
<!-- * these options mean.                             * -->
<!-- *************************************************** -->

<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="100000"
                ticks_per_second="10"
                random_seed="123" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <khepera_mixed_controller id="kmc"
                                 library="build/controllers/khepera_mixed/libkhepera_mixed">
      <actuators>
        <differential_steering implementation="default" />
        <leds implementation="default" medium="leds" />
        <range_and_bearing implementation="default" />
      </actuators>
      <sensors>
        <kheperaiv_proximity implementation="default" show_rays="false" />
        <kheperaiv_light implementation="rot_z_only" show_rays="false" />
        <kheperaiv_ground implementation="rot_z_only" />
        <range_and_bearing implementation="medium" medium="rab" />
        <positioning implementation="default" />
      </sensors>
      <params velocity="10">
        <diffusion go_straight_angle_range="-5:5"
                   delta="0.1" />
        <wheel_turning hard_turn_angle_threshold="90"
                       soft_turn_angle_threshold="70"
                       no_turn_angle_threshold="10"
                       max_speed="10" />
        <state initial_rest_to_explore_prob="0.1"
               initial_explore_to_rest_prob="0.1"
               food_rule_explore_to_rest_delta_prob="0.1"
               food_rule_rest_to_explore_delta_prob="0.1"
               collision_rule_explore_to_rest_delta_prob="0.1"
               social_rule_explore_to_rest_delta_prob="0.1"
               social_rule_rest_to_explore_delta_prob="0.1"
               minimum_resting_time="5"
               minimum_unsuccessful_explore_time="600"
               minimum_search_for_place_in_nest_time="5">
          <food_rule active="true" food_rule_explore_to_rest_delta_prob="0.1" />
        </state>
        <flocking target_distance="75"
                  gain="1000"
                  exponent="2"
                  max_interaction="0.2" />
      </params>
    </khepera_mixed_controller>

  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions label="MasterLoopFunctions">

    <sub_loop_function library="build/loop_functions/trajectory_collection_loop_functions/libtrajectory_collection_loop_functions"
      label="trajectory_collection_loop_functions">
      <collection filename="foraging_TIMESTAMP.dat" />
    </sub_loop_function>

    <sub_loop_functions library="build/loop_functions/mixed_loop_functions/libmixed_loop_functions.so"
                    label="mixed_loop_functions">
      <foraging items="35"
                radius="0.1"
                energy_per_item="1000"
                energy_per_walking_robot="1"
                output="foraging.txt" />
    </sub_loop_functions>
  </loop_functions>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="7, 7, 2" center="0,0,1">

    <floor id="floor"
           source="loop_functions"
           pixels_per_meter="50" />

    <box id="wall_north" size="6,0.1,0.5" movable="false">
      <body position="0,3,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="6,0.1,0.5" movable="false">
      <body position="0,-3,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,6,0.5" movable="false">
      <body position="3,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,6,0.5" movable="false">
      <body position="-3,0,0" orientation="0,0,0" />
    </box>

<!--     <light id="flocking"
           position="-3,-1,0.5"
           orientation="0,0,0"
           color="yellow"
           intensity="3.0"
           medium="leds" /> -->

    <light id="light_1"
           position="0,-2.5,1.0"
           orientation="0,0,0"
           color="yellow"
           intensity="3.0"
           medium="leds" />

    <light id="light_2"
           position="-0.95,-2.5,1.0"
           orientation="0,0,0"
           color="green"
           intensity="3.0"
           medium="leds" />
    <light id="light_3"
           position="1.05,2.5,1.0"
           orientation="0,0,0"
           color="blue"
           intensity="3.0"
           medium="leds" />
<!--     <light id="light_4"
           position="3,1.5,1.0"
           orientation="0,0,0"
           color="yellow"
           intensity="3.0"
           medium="leds" /> -->

    <distribute>
      <position method="uniform" min="-3,-3,0" max="3,3,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="15" max_trials="100" base_num = "1">
        <kheperaiv id="kh">
          <controller config="kmc" />
        </kheperaiv>
      </entity>
    </distribute>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placement idx="0"
                   position="0,0,4.34"
                   look_at="0,0,0"
                   lens_focal_length="20" />
      </camera>
      <user_functions library="build/loop_functions/trajectory_collection_loop_functions/libtrajectory_collection_loop_functions"
        label="trajectory_collection_qtuser_functions" />
    </qt-opengl>

<!--      <qt-opengl>
      <camera>
        <placement idx="0"
                   position="0,0,4.34"
                   look_at="0,0,0"
                   lens_focal_length="20" />
      </camera>
      <user_functions label="foraging_qt_user_functions" />
    </qt-opengl> -->
  </visualization>

</argos-configuration>
