<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="10000"
                ticks_per_second="10"
                random_seed="SEED" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <khepera_flocking_controller id="ffc"
                                 library="build/controllers/khepera_flocking/libkhepera_flocking">
      <actuators>
        <differential_steering implementation="default" noise_std_dev="NOISE_WH" />
        <range_and_bearing implementation="default" />
      </actuators>
      <sensors>
        <range_and_bearing implementation="medium" 
                           rab_range="2" 
                           medium="rab" 
                           show_rays="false"
                           noise_std_dev="NOISE_RAB" />
        <kheperaiv_light implementation="rot_z_only" show_rays="false" />
      </sensors>
      <params>
        <wheel_turning hard_turn_angle_threshold="90"
                       soft_turn_angle_threshold="70"
                       no_turn_angle_threshold="10"
                       max_speed="10" />
        <flocking target_distance="75"
                  gain="1000"
                  exponent="2"
                  max_interaction="0.2" />
      </params>
    </khepera_flocking_controller>

  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->

  <loop_functions label="MasterLoopFunctions">

    <sub_loop_function library="build/loop_functions/trajectory_collection_loop_functions/libtrajectory_collection_loop_functions"
      label="trajectory_collection_loop_functions">
      <collection filename="flocking_TIMESTAMP.dat" />
    </sub_loop_function>

    <sub_loop_functions library="build/loop_functions/flocking_loop_functions/libflocking_loop_functions"
                    label="flocking_loop_functions">
    </sub_loop_functions>
  </loop_functions>


<!--   <loop_functions library="build/loop_functions/trajectory_collection_loop_functions/libtrajectory_collection_loop_functions"
                  label="trajectory_collection_loop_functions">
  </loop_functions>
 -->
  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="5,5,2" center="0,0,0.5">

    <light id="light"
           position="-2,-1.5,1.0"
           orientation="0,0,0"
           color="yellow"
           intensity="3.0"
           medium="leds" />

    <box id="wall_north" size="4,0.1,0.5" movable="false">
      <body position="0,2,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="4,0.1,0.5" movable="false">
      <body position="0,-2,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,4,0.5" movable="false">
      <body position="2,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,4,0.5" movable="false">
      <body position="-2,0,0" orientation="0,0,0" />
    </box>

    <!--
        You can distribute entities randomly. Here, we distribute
        the entities in this way:
        - the position is uniformly distributed on the ground, in the
          square whose corners are (4,4) and (5,5)
        - the orientations are non-zero only when rotating around Z and
          chosen from a gaussian distribution, whose mean is zero degrees
          and standard deviation is 360 degrees.
    -->
    
    <distribute>
      <position method="uniform" min="0,0,0" max="2,2,0" />
      <!-- <position method="uniform" min="4,4,0" max="5,5,0" /> -->
      <!-- <orientation method="constant" values="0,0,0"/> -->
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
      <entity quantity="NBROBOTS" max_trials="100" base_num="1">
        <kheperaiv id="kh" omnidirectional_camera_aperture="80">
          <controller config="ffc" />
        </kheperaiv>
      </entity>
    </distribute>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->

  <visualization>
