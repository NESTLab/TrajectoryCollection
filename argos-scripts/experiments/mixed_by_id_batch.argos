      <body position="0,-2,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,4,0.5" movable="false">
      <body position="2,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,4,0.5" movable="false">
      <body position="-2,0,0" orientation="0,0,0" />
    </box>

<!--     <light id="light_1"
           position="-2,-1.5,1.0"
           orientation="0,0,0"
           color="yellow"
           intensity="3.0"
           medium="leds" /> -->
    <light id="light_2"
           position="-2,-0.5,1.0"
           orientation="0,0,0"
           color="yellow"
           intensity="3.0"
           medium="leds" />
