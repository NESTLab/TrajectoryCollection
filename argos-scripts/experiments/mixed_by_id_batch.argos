    <distribute>
      <position method="uniform" min="-2,-2,0" max="-1,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="10" max_trials="100" base_num="11">
        <kheperaiv id="kh">
          <controller config="koc" />
        </kheperaiv>
      </entity>

    </distribute>

    <distribute>
      <position method="uniform" min="-2,-2,0" max="-1,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />

      <entity quantity="10" max_trials="100" base_num="1">
        <kheperaiv id="kh" >
          <controller config="kfoc" />
        </kheperaiv>
      </entity>

    </distribute>

    <distribute>
      <position method="uniform" min="1,1,0" max="2,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />

      <entity quantity="10" max_trials="100" base_num="21">
        <kheperaiv id="kh" omnidirectional_camera_aperture="80">
          <controller config="kflc" />
        </kheperaiv>
      </entity>

    </distribute>


  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
  </media>

